<div class="container">
<h1>Create new task</h1>

<%= form_for(@task) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :details %>
<%= f.text_field :details %>
<%= f.label :completed %>
<%= f.check_box :completed %>
<%= f.submit class:"btn btn-success"%>
<% end %>
<br/>
<%= link_to  "Go back", tasks_path , class:"btn btn-dark"%>
</div>